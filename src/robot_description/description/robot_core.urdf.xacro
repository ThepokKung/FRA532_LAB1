<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- Import the inertial macros -->
    <xacro:include filename="inertial_macros.xacro"/>

    <!-- COLOR NAME  -->
    <material name="white">
        <color rgba="1 1 1 1" />
    </material>
    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>
     <material name="blue">
        <color rgba="0 0 1 1"/>
    </material>

    <!-- base link -->
    <link name="base_link"/>

    <!-- chassis link -->
    <joint name="chassis_joint" type="fixed">
        <origin xyz="0.0 0.0 0.095" rpy="0.0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="chassis"/>
    </joint>

    <link name="chassis">
        <visual name="">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.20 0.13 0.1"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.20 0.13 0.1"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="3.0" x="0.13" y="0.2" z="0.1">
            <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="chassis">
        <material>Gazebo/White</material>
    </gazebo>

    <!-- front left wheel -->
    <link name="front_left_wheel_joint_link">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.1"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
        </inertial>
    </link>

    <joint name="front_left_steering_joint" type="revolute">
        <origin xyz="0.10 0.07 -0.045" rpy="0.0 0.0 0.0"/>
        <parent link="chassis"/>
        <child link="front_left_wheel_joint_link"/>
        <axis xyz="0.0 0.0 1.0"/>
        <limit lower="-0.7854" upper="0.7854" effort="0.0" velocity="0.0"/>
        <!-- <hardwareInterface>PositionJointInterface</hardwareInterface> -->
    </joint>

    <link name="front_left_wheel_link">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.1"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
        </inertial>
        <visual name="">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.045" length="0.01"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.045" length="0.01"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.01" radius="0.045">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <joint name="front_left_wheel" type="continuous">
        <origin xyz="0.0 0.0 0.0" rpy="-1.57 0.0 0.0"/>
        <parent link="front_left_wheel_joint_link"/>
        <child link="front_left_wheel_link"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>

    <gazebo reference="front_left_wheel_link">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- front right wheel -->
    <link name="front_right_wheel_joint_link">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.1"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
        </inertial>
    </link>

    <joint name="front_right_steering_joint" type="revolute">
        <origin xyz="0.10 -0.07 -0.045" rpy="0.0 0.0 0.0"/>
        <parent link="chassis"/>
        <child link="front_right_wheel_joint_link"/>
        <axis xyz="0.0 0.0 1.0"/>
        <limit lower="-0.7854" upper="0.7854" effort="0.0" velocity="0.0"/>
        <!-- <hardwareInterface>PositionJointInterface</hardwareInterface> -->
    </joint>

    <link name="front_right_wheel_link">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.1"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
        </inertial>
        <visual name="">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.045" length="0.01"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.045" length="0.01"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.01" radius="0.045">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <joint name="front_right_wheel" type="continuous">
        <origin xyz="0.0 0.0 0.0" rpy="-1.57 0.0 0.0"/>
        <parent link="front_right_wheel_joint_link"/>
        <child link="front_right_wheel_link"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>

    <gazebo reference="front_right_wheel_link">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- back left wheel -->
    <joint name="back_left_wheel" type="continuous">
        <origin xyz="-0.10 0.07 -0.045" rpy="-1.57 0.0 0.0"/>
        <parent link="chassis"/>
        <child link="back_left_wheel_link"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>

    <link name="back_left_wheel_link">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.1"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
        </inertial>
        <visual name="">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.045" length="0.01"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.045" length="0.01"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.01" radius="0.045">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="back_left_wheel_link">
        <material>Gazebo/Black</material>
    </gazebo>

    <!-- back right wheel -->
    <joint name="back_right_wheel" type="continuous">
        <origin xyz="-0.10 -0.07 -0.045" rpy="-1.57 0.0 0.0"/>
        <parent link="chassis"/>
        <child link="back_right_wheel_link"/>
        <axis xyz="0.0 0.0 1.0"/>
        <limit lower="0.0" upper="0.0" effort="0.0" velocity="0.0"/>
    </joint>

    <link name="back_right_wheel_link">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.1"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
        </inertial>
        <visual name="">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.045" length="0.01"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.045" length="0.01"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.01" radius="0.045">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="back_right_wheel_link">
        <material>Gazebo/Black</material>
    </gazebo>

</robot>